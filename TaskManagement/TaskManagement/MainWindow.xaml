<Window x:Class="TaskManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>

            <TextBlock Text="Id"/>
            <TextBox Name="txtId"></TextBox>


            <TextBlock Text="Name"/>
            <TextBox Name="txtName"></TextBox>

            <TextBlock Text="LastName"/>
            <TextBox Name="txtLastName"></TextBox>

            <TextBlock Text="Login"/>
            <TextBox Name="txtLogin"></TextBox>

            <TextBlock Text="Password"/>
            <TextBox Name="txtPassword"></TextBox>

            <Button Content="Add" Name="btnAddUser" Click="btnAddUser_Click"></Button>
            <Button Content="Update" Name="btnUpdate" Click="btnUpdate_Click"></Button>
            <Button Content="Delete" Name="btnDelete" Click="btnDelete_Click"></Button>

            <TextBox Name="txtError"></TextBox>

        </StackPanel>

    </Grid>
</Window>
